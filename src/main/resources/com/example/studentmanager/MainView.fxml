<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #A78682;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanager.MainController">
    <children>
        <TableView fx:id="studentTable" layoutX="20" layoutY="20" prefHeight="200" prefWidth="560">
            <columns>
                <TableColumn fx:id="studentIdColumn" prefWidth="50" text="ID" />
                <TableColumn fx:id="studentNameColumn" prefWidth="150" text="Name" />
                <TableColumn fx:id="studentEmailColumn" prefWidth="200" text="Email" />
                <TableColumn fx:id="studentMajorColumn" prefWidth="160" text="Major" />
            </columns>
        </TableView>
        <Label layoutX="20" layoutY="240" text="ID:" />
        <TextField fx:id="studentIdField" layoutX="70" layoutY="240" />
        <Label layoutX="20" layoutY="280" text="Name:" />
        <TextField fx:id="studentNameField" layoutX="70" layoutY="280" />
        <Label layoutX="20" layoutY="320" text="Email:" />
        <TextField fx:id="studentEmailField" layoutX="70" layoutY="320" />
        <Label layoutX="20" layoutY="360" text="Major:" />
        <TextField fx:id="studentMajorField" layoutX="70" layoutY="360" />
        <Button fx:id="addButton" layoutX="300" layoutY="240" style="-fx-background-color: #C9F2C7;" text="Add" />
        <Button fx:id="updateButton" layoutX="360" layoutY="240" style="-fx-background-color: #96BDC6;" text="Update" />
        <Button fx:id="deleteButton" layoutX="440" layoutY="240" style="-fx-background-color: #D95D39;" text="Delete" />
    </children>
</AnchorPane>
